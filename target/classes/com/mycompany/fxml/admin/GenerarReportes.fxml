<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.GenerarReportesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="GeneraciÃ³n de Reportes" />
                <Label text="Seleccione el tipo de reporte y los filtros para generarlo." />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Tipo de Reporte:" />
                        <ComboBox fx:id="reportTypeComboBox" onAction="#onReportTypeSelected" prefWidth="250.0" promptText="Seleccione un reporte" />
                        <Button onAction="#handleGenerateReport" text="Generar Reporte" />
                    </children>
                </HBox>
                <VBox fx:id="filterContainer" spacing="10.0">
                    <!-- Filters will be dynamically added here -->
                    <children>
                        <Label text="Filtros:" />
                        <HBox fx:id="dateFilterBox" spacing="10.0" visible="false">
                            <children>
                                <Label text="Desde:" />
                                <DatePicker fx:id="startDatePicker" />
                                <Label text="Hasta:" />
                                <DatePicker fx:id="endDatePicker" />
                            </children>
                        </HBox>
                        <HBox fx:id="careerFacultyFilterBox" spacing="10.0" visible="false">
                            <children>
                                <Label text="Facultad:" />
                                <ComboBox fx:id="facultyFilterComboBox" prefWidth="150.0" promptText="Todas" />
                                <Label text="Carrera:" />
                                <ComboBox fx:id="careerFilterComboBox" prefWidth="150.0" promptText="Todas" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <TextArea fx:id="reportOutputArea" editable="false" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</AnchorPane>
