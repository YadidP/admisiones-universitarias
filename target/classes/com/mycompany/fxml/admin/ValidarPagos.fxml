<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.ValidarPagosController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Validación de Comprobantes de Pago" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Código de Transacción o Comprobante:" />
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Ej: TX12345" />
                        <Button onAction="#handleSearchAction" text="Buscar" />
                    </children>
                </HBox>
                <VBox fx:id="resultContainer" spacing="15.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 20;" visible="false">
                    <children>
                        <Label fx:id="statusMessageLabel" style="-fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                              <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                                <Label text="Postulante:" />
                                <Label fx:id="nombreLabel" text="-" GridPane.columnIndex="1" />
                                <Label text="Cédula de Identidad:" GridPane.rowIndex="1" />
                                <Label fx:id="ciLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Carrera:" GridPane.rowIndex="2" />
                                <Label fx:id="carreraLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Fecha de Pago:" GridPane.rowIndex="3" />
                                <Label fx:id="fechaPagoLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label text="Estado Actual:" GridPane.rowIndex="4" />
                                <Label fx:id="estadoActualLabel" style="-fx-font-weight: bold;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                           </children>
                        </GridPane>
                        <HBox fx:id="actionButtonsContainer" alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="validarButton" onAction="#handleValidarAction" style="-fx-background-color: #28a745;" text="Validar Pago" />
                                <Button fx:id="rechazarButton" onAction="#handleRechazarAction" style="-fx-background-color: #dc3545;" text="Rechazar Pago" />
                                <Button fx:id="notificarPendienteButton" onAction="#handleNotifyPendingPayment" style="-fx-background-color: #ffc107;" text="Notificar Pago Pendiente" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
