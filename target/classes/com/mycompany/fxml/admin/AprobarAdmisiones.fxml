<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.AprobarAdmisionesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Aprobación de Listas Oficiales de Admisión" />
                <Label text="Revise los resultados finales y apruebe la lista oficial de admitidos." />
                <TableView fx:id="resultadosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="carreraCol" prefWidth="150.0" text="Carrera" />
                        <TableColumn fx:id="puntajeCol" prefWidth="100.0" text="Puntaje" />
                        <TableColumn fx:id="estadoCol" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="nombrePostulanteCol" prefWidth="200.0" text="Postulante" />
                        <TableColumn fx:id="ciPostulanteCol" prefWidth="100.0" text="CI" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button onAction="#handleAprobarLista" text="Aprobar Lista Oficial" />
                        <Button onAction="#handleExportarPdf" text="Exportar a PDF" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>