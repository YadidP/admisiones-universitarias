<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.GestionarExamenesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Gestión de Exámenes de Admisión" />
                <Label text="Programe, edite o elimine exámenes de admisión." />

                <VBox styleClass="card" spacing="10.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Programar Nuevo Examen" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Fecha:" />
                                <DatePicker fx:id="fechaPicker" GridPane.columnIndex="1" />
                                <Label text="Hora:" GridPane.rowIndex="1" />
                                <TextField fx:id="horaField" promptText="HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Lugar:" GridPane.rowIndex="2" />
                                <TextField fx:id="lugarField" promptText="Ej: Aula 101" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Modalidad:" GridPane.columnIndex="2" />
                                <ComboBox fx:id="modalidadComboBox" prefWidth="200.0" GridPane.columnIndex="3" />
                                <Label text="Carrera:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <ComboBox fx:id="carreraComboBox" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button onAction="#handleProgramarExamen" text="Programar Examen" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Label style="-fx-font-weight: bold;" text="Exámenes Programados" />
                <TableView fx:id="examenesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="fechaCol" prefWidth="100.0" text="Fecha" />
                        <TableColumn fx:id="horaCol" prefWidth="80.0" text="Hora" />
                        <TableColumn fx:id="lugarCol" prefWidth="150.0" text="Lugar" />
                        <TableColumn fx:id="modalidadCol" prefWidth="100.0" text="Modalidad" />
                        <TableColumn fx:id="carreraCol" prefWidth="200.0" text="Carrera" />
                        <TableColumn fx:id="accionesCol" prefWidth="180.0" text="Acciones" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>