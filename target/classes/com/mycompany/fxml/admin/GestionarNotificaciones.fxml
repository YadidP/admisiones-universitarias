<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.GestionarNotificacionesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Gestión de Notificaciones" />
                <Label text="Envíe notificaciones a postulantes y revise el historial." />

                <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Enviar Nueva Notificación" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Destinatario (CI o 'GENERAL'):" />
                                <TextField fx:id="destinatarioField" prefWidth="200.0" promptText="CI del postulante o GENERAL" />
                            </children>
                        </HBox>
                        <TextArea fx:id="mensajeTextArea" prefHeight="80.0" promptText="Escriba el mensaje de la notificación aquí..." />
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Button onAction="#handleSendNotification" text="Enviar Notificación" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Label style="-fx-font-weight: bold;" text="Historial de Notificaciones" />
                <TableView fx:id="notificacionesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="fechaCol" prefWidth="150.0" text="Fecha" />
                        <TableColumn fx:id="mensajeCol" prefWidth="400.0" text="Mensaje" />
                        <TableColumn fx:id="leidaCol" prefWidth="80.0" text="Leída" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
