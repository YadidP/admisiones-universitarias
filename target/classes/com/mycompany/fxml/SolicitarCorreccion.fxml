<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.SolicitarCorreccionController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Solicitud de Corrección de Datos Personales" />
                <Label text="Utilice este formulario para solicitar la corrección de sus datos personales." />

                <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Sus Datos Actuales" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            </columnConstraints>
                            <children>
                                <Label text="Nombre Completo:" />
                                <Label fx:id="currentFullNameLabel" text="-" GridPane.columnIndex="1" />
                                <Label text="Cédula de Identidad:" GridPane.rowIndex="1" />
                                <Label fx:id="currentCiLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Correo Electrónico:" GridPane.rowIndex="2" />
                                <Label fx:id="currentEmailLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Datos a Corregir" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            </columnConstraints>
                            <children>
                                <Label text="Campo a Corregir:" />
                                <TextField fx:id="campoAfectadoField" promptText="Ej: Nombre Completo" GridPane.columnIndex="1" />
                                <Label text="Nuevo Valor:" GridPane.rowIndex="1" />
                                <TextField fx:id="nuevoValorField" promptText="Ingrese el valor correcto" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Motivo de la Corrección:" GridPane.rowIndex="2" />
                                <TextArea fx:id="motivoTextArea" prefHeight="80.0" promptText="Explique brevemente por qué solicita la corrección" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <Button onAction="#handleSubmitRequest" text="Enviar Solicitud de Corrección" />
            </children>
        </VBox>
    </children>
</AnchorPane>
