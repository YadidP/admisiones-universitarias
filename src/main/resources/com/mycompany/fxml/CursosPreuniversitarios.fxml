<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.CursosPreuniversitariosController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Cursos Preuniversitarios" />
                <Label text="Inscríbete en un curso preuniversitario para prepararte para el examen de ingreso." />

                <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Inscripción a Cursos" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Curso Disponible:" />
                                <ComboBox fx:id="cursoComboBox" prefWidth="300.0" promptText="Seleccione un curso" />
                                <Button onAction="#handleEnrollAction" text="Inscribirse" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Separator />

                <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Mi Curso Actual" />
                        <Label fx:id="currentCourseNameLabel" text="Nombre del Curso: -" />
                        <Label fx:id="currentCourseCareerLabel" text="Carrera Asociada: -" />
                        <Label fx:id="currentCourseScheduleLabel" text="Horario: -" />
                        <Label fx:id="currentCourseTeacherLabel" text="Docente: -" />
                        <Label fx:id="currentCourseCostLabel" text="Costo: -" />
                        <Label fx:id="currentCourseStatusLabel" text="Estado de Inscripción: -" />
                        <Label fx:id="currentCourseSubjectsLabel" text="Materias: -" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
