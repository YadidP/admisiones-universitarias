<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.RegistrarPostulanteController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Registro Administrativo de Postulantes" />
                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Nombre Completo:" />
                        <TextField fx:id="fullNameField" promptText="Nombre completo del postulante" GridPane.columnIndex="1" />
                        <Label text="Cédula de Identidad:" GridPane.rowIndex="1" />
                        <TextField fx:id="ciField" promptText="CI del postulante" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Correo Electrónico:" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" promptText="Correo del postulante" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Carrera de Postulación:" GridPane.rowIndex="3" />
                        <ComboBox fx:id="carreraComboBox" prefWidth="400.0" promptText="Seleccionar carrera" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Modalidad de Admisión:" GridPane.rowIndex="4" />
                        <ComboBox fx:id="modalidadComboBox" prefWidth="400.0" promptText="Seleccionar modalidad" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
                <Button onAction="#handleRegisterAction" prefHeight="45.0" prefWidth="200.0" text="Registrar Postulante" />
            </children>
        </VBox>
    </children>
</AnchorPane>
