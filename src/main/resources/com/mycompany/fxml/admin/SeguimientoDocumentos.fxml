<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.admin.SeguimientoDocumentosController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Seguimiento de Documentos Físicos" />
                <Label text="Listado de postulantes con documentos físicos pendientes de entrega." />
                <TableView fx:id="postulantesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nombreCol" prefWidth="200.0" text="Nombre Completo" />
                        <TableColumn fx:id="ciCol" prefWidth="100.0" text="CI" />
                        <TableColumn fx:id="documentosFaltantesCol" prefWidth="300.0" text="Documentos Faltantes" />
                        <TableColumn fx:id="accionCol" prefWidth="150.0" text="Acción" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
