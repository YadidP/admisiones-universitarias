                        <Label text="Seleccione una Carrera:" />
                        <ComboBox fx:id="carreraComboBox" onAction="#onCarreraSelected" prefWidth="250.0" promptText="Carreras..." />
                    </children>
                </HBox>
                <TreeView fx:id="planTreeView" VBox.vgrow="ALWAYS" />
                <VBox fx:id="infoContainer" spacing="5.0" visible="false">
                    <children>
                        <Label fx:id="totalAsignaturasLabel" style="-fx-font-weight: bold;" text="Total de Asignaturas:" />
                        <Label fx:id="modalidadesLabel" style="-fx-font-weight: bold;" text="Modalidades de TitulaciÃ³n:" />
