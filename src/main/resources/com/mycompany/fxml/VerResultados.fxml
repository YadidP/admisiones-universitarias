<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.VerResultadosController">
    <children>
        <VBox fx:id="mainContainer" alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label styleClass="h1" text="Resultados del Examen de Ingreso" />
                <VBox fx:id="statusContainer" alignment="CENTER" style="-fx-border-color: #555; -fx-border-radius: 10; -fx-padding: 40;">
                    <children>
                        <Label fx:id="statusLabel" text="ESTADO" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                    </children>
                </VBox>
                <VBox fx:id="detailsContainer" alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="carreraLabel" text="Carrera:" />
                        <Label fx:id="puntajeLabel" text="Puntaje Obtenido:" />
                        <Label fx:id="puntajeMinimoLabel" text="Puntaje Mínimo de Aprobación:" />
                    </children>
                </VBox>
                <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#handleDownloadAction" text="Descargar Resultados en PDF" />
            </children>
        </VBox>
    </children>
</AnchorPane>
